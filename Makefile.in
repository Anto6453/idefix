
SRC 		 = $(IDEFIX_DIR)/src
INCLUDE_DIRS = -I, -I. -I$(SRC) -I$(SRC)/hydro -I$(SRC)/hydro/electromotiveforce -I$(SRC)/rkl -I$(SRC)/dataBlock -I$(SRC)/output @extraIncludeDir@
VPATH 		 = ./:$(SRC):$(SRC)/hydro:$(SRC)/hydro/electromotiveforce:$(SRC)/rkl:$(SRC)/dataBlock:$(SRC)/output@extraVpath@

KOKKOS_PATH = ${IDEFIX_DIR}/src/kokkos
KOKKOS_DEVICES = @kokkosDevices@
KOKKOS_ARCH = @kokkosArch@

# include local rules which are not hosted on git
# Can Makefile.local can redefine the make rules
-include Makefile.local

EXE = "idefix"

HEADERS = definitions.hpp error.hpp profiler.hpp arrays.hpp grid.hpp setup.hpp gridHost.hpp idefix.hpp dataBlock.hpp dataBlockHost.hpp global.hpp input.hpp kokkos_types.h loop.hpp real_types.hpp timeIntegrator.hpp output.hpp vtk.hpp dump.hpp hydro.hpp viscosity.hpp fargo.hpp rkl.hpp dumpImage.hpp
HEADERS += @extraHeaders@
OBJ = grid.o gridHost.o input.o main.o dataBlock.o global.o profiler.o dataBlockHost.o setup.o timeIntegrator.o hydro.o error.o
OBJ += addSourceTerms.o addNonIdealMHDFlux.o boundary.o calcCornerEmf.o calcRiemannEmf.o calcNonidealEMF.o calcRiemannFlux.o calcParabolicFlux.o calcCurrent.o calcRightHandSide.o checkDivB.o convertConsToPrim.o convertPrimToCons.o evolveMagField.o extrapolatePrimVar.o
OBJ += electroMotiveForce.o EMFexchange.o enforceEMFBoundary.o makeGeometry.o dumpToFile.o checkNan.o evolveStage.o viscosity.o axis.o fargo.o rkl.o
OBJ += vtk.o dump.o output.o dumpImage.o
OBJ += @extraObj@

#VPATH="src/"

default: build

CXX = @cxx@
CXXFLAGS = @cxxflags@

@extraLine@

LINK = ${CXX}
LINKFLAGS = @ldflags@

DEPFLAGS = -M

LIB =

include $(KOKKOS_PATH)/Makefile.kokkos

# Create gitversion if Idefix is in a git repo
ifneq ("$(wildcard $(IDEFIX_DIR)/.git/HEAD))","")
GIT_DEPENDENCE = $(IDEFIX_DIR)/.git/HEAD $(IDEFIX_DIR)/.git/index
else
GIT_DEPENDENCE =
endif

build: $(EXE)

$(EXE): $(OBJ) $(KOKKOS_LINK_DEPENDS)
	$(LINK) $(KOKKOS_LDFLAGS) $(LINKFLAGS) $(EXTRA_PATH) $(OBJ) $(KOKKOS_LIBS) $(LIB) -o $(EXE)

clean: kokkos-clean
	rm -f *.o *.cuda *.host

# Compilation rules

%.o:%.cpp $(KOKKOS_CPP_DEPENDS)
	$(CXX) $(KOKKOS_CPPFLAGS) $(KOKKOS_CXXFLAGS) $(CXXFLAGS) $(EXTRA_INC) $(INCLUDE_DIRS) -c $<

#dependance on headers
$(OBJ): $(HEADERS)

# in order to have access to current git version
$(SRC)/gitversion.hpp: $(GIT_DEPENDENCE)
	echo "#define GITVERSION \"$(shell cd $(IDEFIX_DIR); git describe --tags --always)\"" > $@

#specific dependence of input.o
input.o: $(SRC)/gitversion.hpp $(HEADERS) input.cpp

test: $(EXE)
	./$(EXE)
